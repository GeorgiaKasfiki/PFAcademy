<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainImg1"
        android:text="Georgia Kasfiki"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Georgia Kasfiki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainImg1"/>

    <ImageView
        android:id="@+id/mainImg1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_wifi_center_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/mainImg2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_warning_center_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mainImg1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainImg3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_camera_center_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/mainImg2"
        app:layout_constraintRight_toRightOf="@id/mainImg1"
        app:layout_constraintLeft_toLeftOf="@id/mainImg2" />
    
    <Button
        android:id="@+id/mainBtn1"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toRightOf="@id/mainBtn2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mainBtn2"
        android:layout_width="wrap_content"
        android:background="@android:color/holo_red_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mainBtn3"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mainBtn3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@android:color/holo_green_light"
        app:layout_constraintRight_toLeftOf="@id/mainBtn2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/mainBtn4"
        app:layout_constraintTop_toBottomOf="@id/mainBtn1"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/mainBtn5"
        app:layout_constraintLeft_toRightOf="@id/mainBtn4"
        app:layout_constraintTop_toTopOf="@id/mainBtn4"
        app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/mainBtn6"
        app:layout_constraintLeft_toRightOf="@id/mainBtn5"
        app:layout_constraintTop_toTopOf="@id/mainBtn4"
        app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>